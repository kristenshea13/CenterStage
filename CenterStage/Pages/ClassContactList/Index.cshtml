@page "{searchString?}"
@model CenterStage.Pages.ClassContactList.IndexModel

@{
    ViewData["Title"] = "Class List";
}

<h1>Class Registration List</h1>


<form>
    <p>
        <select asp-for="ClassID" asp-items="Model.ClassTitle">
            <option value="0">All</option>
        </select>
        <input type="submit" value="Filter" />
    </p>
</form>


@if (Model.ClassID.HasValue)
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentRegistration[0].Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentRegistration[0].Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentRegistration[0].Student.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentRegistration[0].Student.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentRegistration[0].Student.Birthdate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StudentRegistration)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Class.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.Birthdate)
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
