@page
@model CenterStage.Pages.About.AboutModel
@{
    ViewData["Title"] = "About";
}

<body style="background-color:lightpink">

    <div class="box-shadow"><h1>Our Story</h1></div>

    <input type="submit" value="Create" asp-page="./EditAbout/1" />

    



    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.About[1].MissionStmt)
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <p>
                        We are a group of teachers who believe that no child
                        should be left out of the arts due to cost. We offer
                        high quality dance education in ballet, tap, poms, jazz,
                        lyrical, and pointe, at a rate that won't stress your wallet.
                    </p>
                </td>
            </tr>
            @foreach (var item in Model.About)
            {
                <tr>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.MissionStmt)*@

                        

                    </td>


                    <td>
                        <a asp-page="./About/EditAbout" asp-route-id="@item.ID">Edit</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    
    
    

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.About[1].AboutStudio)</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.About)
            {
                <tr>

                    <td>@Html.DisplayFor(modelItem => item.AboutStudio)</td>
                    <td>
                        <a asp-page="./About/EditAbout" asp-route-id="@item.ID">Edit</a>
                    </td>

                </tr>
            }
        </tbody>



    </table>


</body>


